pipeline {
    agent any
    environment {
        TOMCAT_HOME = 'C:\\Program Files\\Apache Software Foundation\\Tomcat 10.1 '// Update with your Tomcat directory
        }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    // Clone the repository
                    def gitCredentials = 'Gauri'  // ID of your Git credentials in Jenkins
                    def repositoryURL = 'https://github.com/Gauri43/maven_1.git'
                    def branchName = 'main'  // Replace with the branch you want to clone

                    checkout([$class: 'GitSCM',
                              branches: [[name: "refs/heads/${branchName}"]],
                              userRemoteConfigs: [[
                                  url: repositoryURL,
                                  credentialsId: gitCredentials
                              ]]])
                }
            }
}
stage('Build') {
            steps {
                bat 'mvn clean install'
            }
    
 }

stage('Test')
    {
    steps {
            bat 'mvn test'
        }
    }

stage('Deploy to Tomcat') {
            steps {
                // Remove the existing application in Tomcat webapps directory
                bat "${TOMCAT_HOME}/bin/shutdown.sh"
                bat "rm -rf ${TOMCAT_HOME}/webapps/maven_1"
                
                // Copy the newly built WAR file to Tomcat webapps directory
                bat "cp target/maven_1.war ${TOMCAT_HOME}/webapps/"
                
                // Start Tomcat
                bat "${TOMCAT_HOME}/bin/startup.sh"
            }
        }
}

}
